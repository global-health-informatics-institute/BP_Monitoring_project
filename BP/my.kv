    background_color: (0,0,0,0)
    color: (0,0,0,1)
    background_normal: ""
    canvas.before:
        Color:
#            rgba:(0,0,0,1)
            rgba:(210/255,210/255,207/255,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]