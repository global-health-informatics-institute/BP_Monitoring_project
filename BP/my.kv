<Manager>:
#    PatientDetails:
    MainWindow:
    ScanWindow:
    ResponseWindow:
    PatientDetails:

<MainWindow>:
    name: "Main"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "ELECTRONIC BP MONITORING SYSTEM"
                size_hint_x: 1
                font_size: 18
                bold:True
                color: (0,0,0,1)

        Label:
            id: sp1
            size_hint_x: None
            height: 40
        RoundedButton:
            bold: True
            text: "CLICK TO SCAN ID"
            font_size: 25
            pos_hint: {"center_x": 0.5, "center_y": .5}
            size_hint_x: .7
            size_hint_y: None
#            color: (0,0,0,1)
#            background_color: (210/255,210/255,207/255,1)
#            background_normal: ""
            height:100
            on_press:
                app.root.current = "Scan"
                root.manager.transition.direction = "left"
                root.manager.get_screen("Scan").ids["textFocus"].focus = True

        Label:
            id: sp2

<ScanWindow>:
    name: "Scan"
    spacing: 20
    on_enter:
        root.enter()
        root.On_LED()

    on_leave:
        root.Off_LED()
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                size_hint_x: .2
                font_size: 18
                bold:True
                color: (0,0,0,1)
                background_color: (210/255,210/255,207/255,1)
                background_normal: "images/back.png"
                on_press:
                    app.root.current = "Main"
                    root.manager.transition.direction = "right"


            Label:
                text: "CAPTURE DEMOGRAPHIC DATA"
                color: (0,0,0,1)
                size_hint_x: .8
                bold: True
                font_size: 18

        Label:
            text: "Scan National ID to capture demographic data"
            font_size:20
            bold: True
            pos_hint: {"center_x": 0.5, "center_y": .5}
            size_hint_x: .7
            size_hint_y: None
            color: (0,0,0,1)
            background_color: (1,1,1,1)
            background_normal: ""
            height:50

        Image:
            source: "images/id.jpeg"
            size_hint: (.7, .8)
            pos_hint: {"center_x": 0.5}

        TextInput:
            id: textFocus
            opacity: 0
            cursor_blink: False
            cursor_color: (210/255,210/255,207/255,1)
            size_hint: .6,.1
            multiline: False
            pos_hint: {"center_x": 0.5, "centre_y":0.7}
            on_text_validate:
                root.callback()

        Label:
            id: ss
        Label:
            text: "Insert ID here"
            bold: True
            size_hint_x: .7
            font_size:20
            size_hint_y: None
            height: 40
            pos_hint: {"center_x": 0.5, "center_y": .5}
            color: (0,0,0,1)

        Image:
            padding: 10
            source: "images/fast-forward.png"
            size_hint: (.5, .3)
            pos_hint: {"center_x": 0.5}




<PatientDetails>:
    name: "Patient_Details"
    on_enter:
        root.enter()
        root.generate_BP()
    on_pre_leave:
        root.leave()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                size_hint_x: .2
                font_size: 18
                bold:True
                color: (0,0,0,1)
                background_color: (210/255,210/255,207/255,1)
                background_normal: "images/back.png"
                on_press:
                    app.root.current = "Scan"
                    root.manager.transition.direction = "right"
                    root.enter()


            Label:
                text: "CAPTURE BP VITALS"
                color: (0,0,0,1)
                size_hint_x: .8
                bold: True
                font_size: 18

        GridLayout:
            spacing: 0
            row_force_default: True
            row_default_height: 215
            cols: 1
#            foo: [self.rows_minimum.update({i: x.height}) for i, x in enumerate(reversed(list(self.children)))]
#            size_hint_y: None
#            height: self.minimum_height
            GridLayout:
                cols: 1
                row_force_default: True
                row_default_height: 70
                padding: [30,10]
                spacing: 10
#                foo: [self.rows_minimum.update({i: x.height}) for i, x in enumerate(reversed(list(self.children)))]
#                size_hint_y: None
#                height: self.minimum_height

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    Label:
                        size_hint_x: None
                        width: 100
                        font_size: "15dp"
                        text: "Full Name:"
                        color: (0,0,0,1)
#                        bold: True

                    TextInput:
                        color: (0,0,0,1)
                        id: f_name
                        font_size: "20dp"
                        bold: True

                GridLayout:
                    cols:4
                    spacing: 10
                    Label:
                        color: (0,0,0,1)
                        size_hint_x: None
                        width: 50
                        font_size: "15dp"
                        text: "ID:"
                    TextInput:
                        color: (0,0,0,1)
                        bold: True
                        font_size: "15dp"
                        id: N_id
                    Label:
                        size_hint_x: None
                        font_size: "15dp"
                        width: 50
                        text: "DOB:"
                        color: (0,0,0,1)
                    TextInput:
                        id: dob
                        bold: True
                        font_size: "15dp"
                        color: (0,0,0,1)

                    Label:
                        text: "Gender:"
                        font_size: "15dp"
                        size_hint_x: None
                        width: 70
                        color: (0,0,0,1)
                    TextInput:
                        id: gender
                        bold: True
                        font_size: "15dp"
                        color: (0,0,0,1)
                    Label:
                        text: "Previous BP:"
                        font_size: "15dp"
                        size_hint_x: None
                        width: 100
                        color: (0,0,0,1)
                    TextInput:
                        id: pBP
                        font_size: "15dp"
                        bold: True
                        color: (0,0,0,1)
                BoxLayout:
                    padding: [0,-30]
                    orientation: "vertical"
                    BoxLayout:
                        size_hint_y: None
                        height: 70
                        Label:
                            size_hint_x: None
                            width: 100
                            halign: "right"
                            font_size: "15dp"
                            text: "Current BP:"
                            color: (0,0,0,1)


                        Label:
                            id: bpValue
                            color: (0,0,0,1)
                            text_size: self.size
                            text: "Waiting for BP Vitals..."
                            font_size: "15dp"
                            halign: "left"
                            valign: "middle"
                            bold: True

                    BoxLayout:
                        size_hint_y: None
                        orientation: "vertical"
                        height: 20
                        padding: [10,0]
                        spacing:10
                        Label:
                            text: "RECOMMENDATION"
                            color: (0,0,0,1)
                            text_size: self.size
                            halign: "center"
                            valign: "top"
                            bold: True
#                        Label:
#                            id: yy
            BoxLayout:
                padding: [30,0]
                TextInput:
                    multiline: True
                    id: comment
                    padding: [20,20]
                    font_size: 15
                    size_hint_x: .7
                    size_hint_y: None
                    height: 150
                    pos_hint: {"center_x":0.5}

            BoxLayout:
                padding: [0,40]
                size_hint: self.size
                valign: "top"
                orientation: "vertical"
                size_hint_y: None
                height:1
                Label:
                    id: lblText
                    text: "Press the Blue Round Button"
                    bold: True
                    color: (0,0,0,1)

                BoxLayout:
                    padding: 70
                    spacing: 20
                    RoundedButton:
                        id: restart
                        bold: True
                        text: "Finish"
                        padding:  [20,10]
                        size_hint_x: .2
                        opacity: 0
                        size_hint_y: None
                        height: 40
                        pos_hint: {"center_x": 0.5, "center_y":0.2}
                        on_release:
                            root.enter()
                            app.root.current = "Main"


                    RoundedButton:
                        id: takeBP
                        bold: True
                        text: "Take BP"
                        size_hint_x: .2
                        size_hint_y: None
                        opacity: 0
                        height: 40
                        pos_hint: {"center_x": 0.5, "center_y":0.2}
                        on_release:
                            root.regenerate()
