<Manager>:
    MainWindow:
    ScanWindow:
    PatientDetails:

<MainWindow>:
    name: "Main"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "ELECTRONIC BP MONITORING SYSTEM"
                size_hint_x: 1
                font_size: 18
                bold:True
                color: (0,0,0,1)

        Label:
            id: sp1
            size_hint_x: None
            height: 40
        RoundedButton:
            bold: True
            text: "CLICK TO SCAN ID"
            font_size: 25
            pos_hint: {"center_x": 0.5, "center_y": .5}
            size_hint_x: .7
            size_hint_y: None
            height:100
            on_press:
                app.root.current = "Scan"
                root.manager.transition.direction = "left"
                root.manager.get_screen("Scan").ids["textFocus"].focus = True

        Label:
            id: sp2

<ScanWindow>:
    name: "Scan"
    spacing: 20
    on_enter:
        root.enter()
        # root.On_LED()
    
    on_leave:
        # root.Off_LED()

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                size_hint_x: .2
                font_size: 18
                bold:True
                color: (0,0,0,1)
                background_color: (210/255,210/255,207/255,1)
                background_normal: "images/back.png"
                on_press:
                    root.regenerate()
                    app.root.current = "Main"
                    root.manager.transition.direction = "right"


            Label:
                text: "CAPTURE DEMOGRAPHIC DATA"
                color: (0,0,0,1)
                size_hint_x: .8
                bold: True
                font_size: 18

        Label:
            text: "Scan National ID to capture demographic data"
            font_size:20
            bold: True
            pos_hint: {"center_x": 0.5, "center_y": .5}
            size_hint_x: .7
            size_hint_y: None
            color: (0,0,0,1)
            background_color: (1,1,1,1)
            background_normal: ""
            height:50

        Image:
            source: "images/id.jpeg"
            size_hint: (.7, .8)
            pos_hint: {"center_x": 0.5}

        TextInput:
            id: textFocus
            opacity: 0
            cursor_blink: False
            cursor_color: (210/255,210/255,207/255,1)
            size_hint: .6,.1
            multiline: False
            pos_hint: {"center_x": 0.5, "centre_y":0.7}
            on_text_validate:
                root.callback()

        Label:
            id: ss
        Label:
            text: "Insert ID here"
            bold: True
            size_hint_x: .7
            font_size:20
            size_hint_y: None
            height: 40
            pos_hint: {"center_x": 0.5, "center_y": .5}
            color: (0,0,0,1)

        Image:
            padding: 10
            source: "images/fast-forward.png"
            size_hint: (.5, .3)
            pos_hint: {"center_x": 0.5}




<PatientDetails>:
    name: "Patient_Details"
    on_enter:
        root.generate_BP()


    BoxLayout:
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: (210/255,210/255,207/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                size_hint_x: .2
                font_size: 18
                bold:True
                color: (0,0,0,1)
                background_color: (210/255,210/255,207/255,1)
                background_normal: "images/back.png"
                on_press:
                    app.root.current = "Scan"
                    root.manager.transition.direction = "right"

            Label:
                text: "CAPTURE BP VITALS"
                color: (0,0,0,1)
                size_hint_x: .8
                bold: True
                font_size: 18

        BoxLayout:
            size_hint_y: None
            height: 50
            padding: [10, 0]
            Image:
                id: gender
                size_hint_x: 0.2
                size_hint_y: 1
                size: self.texture_size
                allow_stretch: True
			    keep_ratio: True

            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    Label:
                        color: (0,0,0,1)
                        id: f_name
                        text_size: self.size
                        halign: "left"
                        valign: "middle"
                        font_size: "20dp"
                        bold: True

                BoxLayout:
                    Label:
                        id: dob
                        text_size: self.size
                        color: (0,0,0,1)

                    Label:
                        id: N_id
                        text: "VJU78GY"
                        font_size: "17dp"
                        color: (0,0,0,1)

        BoxLayout:
            size_hint_y: None
            height: 50
            padding: [30,0]
            Label:
                color: (0,0,0,1)
                font_size: "15dp"
                text: "Current BP:"
                font_size: "20dp"
                size_hint_x: None
                width: 150
                color: (0,0,0,1)
                text_size: self.size
                halign: "left"
                valign: "middle"
            Label:
                id: bpValue
                text_size: self.size
                halign: "left"
                valign: "middle"
                color: (0,0,0,1)
                font_size: "20dp"
                text: "Waiting For BP Vitals...."
                bold: True

        BoxLayout:
            padding: [30,0]
            size_hint_y: None
            height: 180
            orientation: "horizontal"

            BoxLayout:
                padding: [30,0]
                size_hint_y: None
                height: 180
                orientation: "vertical"
                Label:
                    text: "BP HISTORY"
                    color: (0,0,0,1)
                    bold: True
                    size_hint_y: None
                    height: 30
                    font_size: "17dp"
                GridLayout:
                    cols: 2
                    col_force_default: True
                    col_default_width: 90
                    Label:
                        text_size: self.size
                        halign: "left"
                        font_size: "17dp"
                        valign: "middle"
                        text: "DATE"
                        color: (0,0,0,1)
                    Label:
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        font_size: "17dp"
                        color: (0,0,0,1)
                        text: "BP"
                    Label:
                        id: timeStamp
                        text_size: self.size
                        halign: "left"
                        font_size: "17dp"
                        valign: "middle"
                        color: (0,0,0,1)
                    Label:
                        id: pBP
                        text_size: self.size
                        halign: "center"
                        font_size: "17dp"
                        valign: "middle"
                        color: (0,0,0,1)

                    Label:
                        id: timeStamp2
                        text_size: self.size
                        halign: "left"
                        font_size: "17dp"
                        valign: "middle"
                        color: (0,0,0,1)
                    Label:
                        id: pBP2
                        text_size: self.size
                        halign: "center"
                        font_size: "17dp"
                        valign: "middle"
                        color: (0,0,0,1)
                    Label:
                        id: timeStamp3
                        text_size: self.size
                        halign: "left"
                        font_size: "17dp"
                        valign: "middle"
                        color: (0,0,0,1)
                    Label:
                        id: pBP3
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        font_size: "17dp"
                        color: (0,0,0,1)

                    Label:
                        id: timeStamp4
                        text_size: self.size
                        halign: "left"
                        valign: "middle"
                        font_size: "17dp"
                        color: (0,0,0,1)
                    Label:
                        id: pBP4
                        text_size: self.size
                        halign: "center"
                        valign: "middle"
                        font_size: "17dp"
                        color: (0,0,0,1)


            BoxLayout:
                padding: [30,0]
                size_hint_y: None
                height: 180
                orientation: "vertical"
                Label:
                    text: "RECOMMENDATION"
                    color: (0,0,0,1)
                    bold: True
                    font_size: "17dp"
                    size_hint_y: None
                    height: 30

                Label:
	                id: comment
	                text_size: self.size
	                halign: "center"
	                valign: "middle"
	                color: (0,0,0,1)
	                font_size: "20dp"
                	bold: True

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: 70
            Label:
                id: lblText
                text: "Press the Blue Round Button"
                color: (0,0,0,1)
                bold: True
                font_size: "18dp"

        BoxLayout:
            padding: 70
            size_hint_y: None
            height: 80
            spacing: 20
            RoundedButton:
                id: restart
                bold: True
                text: "Finish"
                padding:  [20,10]
                size_hint_x: .2
                opacity: 0
                font_size: "20dp"
                size_hint_y: None
                height: 40
                pos_hint: {"center_x": 0.5, "center_y":0.2}
                on_press:
                    app.root.current = "Main"


            RoundedButton:
                id: takeBP
                bold: True
                text: "Take BP"
                size_hint_x: .2
                font_size: "20dp"
                size_hint_y: None
                opacity: 0
                height: 40
                pos_hint: {"center_x": 0.5, "center_y":0.2}
                on_press:
                    root.regenerate()
           
        Label:
            id: ii

<RoundedButton@Button>
    background_color: (0,0,0,0)
    color: (0,0,0,1)
    background_normal: ""
    canvas.before:
        Color:
            rgba:(210/255,210/255,207/255,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]